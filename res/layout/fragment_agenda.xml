<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/fragment_agenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sunflower"
        android:orientation="vertical"
        android:padding="16dp" >

        <TextView
            android:id="@+id/agendaDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="26 Jan"
            android:textColor="@color/white"
            android:textSize="32sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/agendaNumAgendaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="4 EVENTS"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/agendaTabContainer"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/agendaTabPersonal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="16dp"
            android:text="Personal"
            android:textAllCaps="true"
            android:clickable="true"
            android:background="@drawable/button_white"
            android:textColor="@color/asbestos"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/agendaTabAll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="16dp"
            android:text="All"
            android:textAllCaps="true"
            android:clickable="true"
            android:background="@drawable/button_white"
            android:textColor="@color/asbestos"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/clouds" />

    <FrameLayout
        android:id="@+id/listagendaContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView 
            android:id="@+id/agendaNoEventsText"
            android:textColor="@color/asbestos" 
            android:layout_width="match_parent" 
            android:layout_height="match_parent" 
            android:text="No Events" 
            android:gravity="center"
            android:padding="30dp"
            android:background="@color/white"
            tools:ignore="HardcodedText" />
        
        <ListView
            android:id="@+id/agendaList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >
        </ListView>

        <ListView
            android:id="@+id/agendaKaryawanList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>

        

    </FrameLayout>

</LinearLayout>