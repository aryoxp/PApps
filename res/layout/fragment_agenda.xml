<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/fragment_agenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sunflower"
        android:padding="16dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/agendaDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:text="26 Jan"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/agendaNumAgendaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="4 EVENTS"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/listagendaContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/agendaList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >
        </ListView>
    </FrameLayout>

</LinearLayout>