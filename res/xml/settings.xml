<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
 
    <PreferenceCategory android:title="@string/pref_server_configuration" >
        <EditTextPreference
                android:title="@string/pref_ip_address"
                android:summary="@string/pref_ip_address_description"
                android:key="host"
                android:defaultValue="175.45.187.246"
                />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_messaging" >
        <ListPreference
                android:title="@string/pref_sound"
                android:summary="@string/pref_sound_description"
                android:key="sound"
                android:entries="@array/pref_sound_entry"
                android:entryValues="@array/pref_sound_entry_values"
                android:defaultValue="1"
                />
    </PreferenceCategory>
    
</PreferenceScreen>
